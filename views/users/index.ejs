<%- include('../partials/header.ejs') %> 
<div class="container mt-5">
    <div class="row justify-content-center">
        <% users.forEach(user => { %>
            <a class="mx-3 my-2 col-sm-5 col-7 col-lg-3" href="/users/<%=user._id%> ">
            <div class="user-card ">
                <h3 class="text-center "><%= user.username %> </h3>
                <div class="avatar">
                    <!-- <img class="card-img" src=" " alt=""> -->
                    <div class="card-img" style="background-image: url('<%= user.avatar %>');"> </div>
                </div>
            </div>
        </a>
        <% }) %>
    </div>
</div>
<%- include('../partials/footer.ejs') %>